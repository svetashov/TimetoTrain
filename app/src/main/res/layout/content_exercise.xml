<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a2.timetotrain.ExerciseActivity"
    tools:showIn="@layout/activity_exercise"
    android:paddingTop="@dimen/nav_header_vertical_spacing"
    android:paddingBottom="@dimen/tile_padding"
    android:background="@color/colorBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_name_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/padding_in_card"
        app:cardElevation="4dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_exercise_name"
            android:textSize="@dimen/text_title"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/tile_padding"
            android:textColor="@color/colorPrimaryText" />
    </android.support.v7.widget.CardView>

    <com.felipecsl.gifimageview.library.GifImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:id="@+id/gifImageView_exercise"
        android:layout_marginTop="@dimen/margin_between_cards"
        android:layout_below="@+id/card_view_name_exercise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_between_cards" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_description_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/gifImageView_exercise"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/padding_in_card"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_in_card">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_counts_exercise"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_title"
                android:layout_marginBottom="@dimen/padding_in_card" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_description_exercise"
                android:textSize="@dimen/text_description"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
